generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(uuid())
  name             String
  email            String    @unique
  passwordHash     String?
  verificationCode String?
  lastLogin        DateTime?
  emailVerifiedAt  DateTime?
  createdAt        DateTime  @default(now())

  tables Table[]

  @@map("users")
}

model Table {
  id        String   @id @default(uuid())
  stages    Stage[]
  players   User[]
  createdAt DateTime @default(now())

  @@map("tables")
}

model Stage {
  id        String   @id @default(uuid())
  data      Json
  createdAt DateTime @default(now())

  tableId String
  table   Table  @relation(fields: [tableId], references: [id])

  @@map("stages")
}
